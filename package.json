{
  "name": "the-cost-of-not-knowing-mongodb",
  "version": "1.0.0",
  "description": "The cost of not knowing MongoDB",
  "main": "./server/index.ts",
  "scripts": {
    "build": "npx tsc --project ./tsconfig.json",
    "format": "prettier --config .prettierrc.json 'server/**/*.ts' --write",
    "lint": "eslint --ignore-path .gitignore --fix --ext .ts .",
    "start:load": "K6_WEB_DASHBOARD=true K6_WEB_DASHBOARD_PERIOD=1s K6_WEB_DASHBOARD_EXPORT=./client/report.html k6 run ./client/load.js",
    "start:server": "npx ts-node server/index.ts",
    "test": "jest",
    "type:coverage": "npx type-coverage --detail"
  },
  "keywords": [
    "mongodb",
    "performance",
    "optimization",
    "indexes",
    "schemas"
  ],
  "author": "ArturGC",
  "license": "MIT",
  "dependencies": {
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "mongodb": "6.3.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "8.4.1",
    "@tsconfig/node18": "18.2.2",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.17",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard-with-typescript": "43.0.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "27.6.3",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-promise": "6.1.1",
    "jest": "29.7.0",
    "prettier": "3.2.5",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "5.3.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "server/**/*.ts"
    ],
    "displayName": {
      "name": "API Server",
      "color": "blue"
    },
    "maxWorkers": "1",
    "preset": "ts-jest",
    "slowTestThreshold": 20,
    "testTimeout": 30000,
    "verbose": true
  }
}
